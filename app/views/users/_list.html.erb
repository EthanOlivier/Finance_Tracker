<div class="row mt-5">
    <div class="col-8">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Ticker</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                </tr>
            </thead>
            <tbody>
                <% @user.stocks.each do |stock| %>
                    <tr>
                        <td><%= stock.ticker %></td>
                        <td><%= stock.name %></td>
                        <td><%= number_to_currency(stock.price) %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>