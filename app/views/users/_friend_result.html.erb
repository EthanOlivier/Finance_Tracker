<div id="results_turbo_stream">
    <% if @friends || @symbol %>
        <div class="mt-3">
            <div class="row">
                <div class="col-8">
                    <div class="card mb-1 p-1">
                        <div class="card-body <% "d-flex gap-3 justify-content-between align-items-center" unless @symbol %>">
                            <% if !@symbol %>
                                <table class="col-12">
                                    <% @friends.each do |friend| %>
                                        <tr class="border-top border-bottom">
                                            <td><span><strong>Email: </strong><%= friend.email %></span></td>
                                            <td><span><strong>Name: </strong><%= friend.full_name %></span></td>
                                            <td>
                                                <% if current_user.friends?(friend.id) %>
                                                    <h6><span class="badge text-bg-secondary mt-1">Already following</span></h6>
                                                <% else %>
                                                    <%= link_to "Follow Friend?", create_friend_path(id: current_user.id, friend_id: friend.id), data: { turbo_method: :post }, class: "btn btn-info remove-stock-button mb-1" %>
                                                <% end %>
                                            </td>
                                        </tr>
                                    <% end %>
                                </table>
                            <% else %>
                                Unable to find friend from email: <strong><%= @symbol %></strong>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>