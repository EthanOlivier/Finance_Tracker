<div id="results_turbo_stream">
    <% if @friend || @symbol %>
        <div class="mt-3">
            <div class="row">
                <div class="col-auto">
                    <div class="card mb-1 p-1">
                        <div class="card-body d-flex gap-3 justify-content-between align-items-center">
                            <% if !@symbol %>
                                <span><strong>Email: </strong><%= @friend.email %></span>
                                <span><strong>Name: </strong><%= @friend.full_name %></span>
                            <% else %>
                                Unable to find friend from email: <strong><%= @symbol %></strong>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>