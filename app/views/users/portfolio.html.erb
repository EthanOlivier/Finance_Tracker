<h1><%= @user.full_name %>'s Portfolio</h1>

<div class="search-bar">
    <h3>Search Stocks</h3>
    <%= form_with url: portfolio_path, method: :post, data: { turbo: true } do %>
        <div class="col-8">
            <%= text_field_tag :stock, nil, placeholder: "Stock Ticker Symbol", autofocus: true, class: "form-control" %>
        </div>
        <div class="col-3 mt-3">
            <%= button_tag "Search", class: "btn btn-success" %>
        </div>
    <% end %>
</div>

<%= render "users/result" %>

<% if @user.stocks.any? %>
    <%= render "users/list" %>
<% end %>