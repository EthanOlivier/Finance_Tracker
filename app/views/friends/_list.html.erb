<div class="row mt-5">
    <div class="col-8">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Email</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @user.friends.each do |friend| %>
                    <tr>
                        <td><%= friend.email %></td>
                        <td><%= friend.first_name %></td>
                        <td><%= friend.last_name %></td>
                        <td><%= link_to "Remove", remove_friend_path(@user.id, friend.id), 
                                data: { turbo_method: :delete, 
                                turbo_confirm: "Are you sure you want to remove #{friend.full_name} from your friends?" }, 
                                class: "btn btn-danger remove-stock-button" %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>